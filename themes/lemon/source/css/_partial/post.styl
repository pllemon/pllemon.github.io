.posts  {
  .post:last-child {
    margin-bottom: 0;
  }
}

.post {
  margin-bottom: 20px;
  background-color: #fff;
  padding: 30px 50px;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12);
  .post-title{
    font-size: 30px;
    margin-bottom: 10px;
    color: #303133;
  }
  .tag-list{
    li{
      list-style: none;
      margin-right: 5px;
      border-radius: 4px;
      font-size: 12px;
      padding: 2px 5px;
      background: rgba(54, 140, 203, 0.1);
      color: #368CCB;
      min-width: 30px;
      text-align: center;
      cursor: pointer;
    }
  }
}

.post-content{
  figure{
    background: #333;
    margin: 0;
    padding-left: 10px;
    color: #fff;
    margin-bottom: 10px;
  }
  .gutter{
    padding-right: 10px;
    border-right: 1px solid #fff;
  }
  .code{
    padding-left: 10px;  
  }
  ul, ol{
    padding-inline-start: 20px;
  }
}